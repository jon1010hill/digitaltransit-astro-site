---
import Layout from '../../layouts/Layout.astro';
import { blogPosts } from '../../data/blog';

export function getStaticPaths() {
  return blogPosts.map(post => ({
    params: { slug: post.slug },
    props: { post }
  }));
}

const { post } = Astro.props;
const formattedDate = new Date(post.publishedAt).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<Layout title={`${post.title} - Digital Transit`} description={post.excerpt}>
	<article class="blog-post">
		<header class="post-header">
			<div class="container">
				<div class="post-meta">
					<span class="category">{post.category}</span>
					<span class="divider">•</span>
					<time datetime={post.publishedAt}>{formattedDate}</time>
					<span class="divider">•</span>
					<span class="read-time">{post.readTime}</span>
				</div>
				<h1>{post.title}</h1>
				<p class="post-excerpt">{post.excerpt}</p>
				<div class="author-info">
					<span>By {post.author}</span>
				</div>
			</div>
		</header>

		{post.imageUrl && (
			<div class="featured-image">
				<img src={post.imageUrl} alt={post.title} />
			</div>
		)}

		<div class="post-content">
			<div class="container">
				<div class="content-wrapper" set:html={post.content.split('\n').map(line => {
					if (line.startsWith('# ')) {
						return `<h1>${line.slice(2)}</h1>`;
					} else if (line.startsWith('## ')) {
						return `<h2>${line.slice(3)}</h2>`;
					} else if (line.startsWith('### ')) {
						return `<h3>${line.slice(4)}</h3>`;
					} else if (line.startsWith('- ')) {
						return `<li>${line.slice(2)}</li>`;
					} else if (line.startsWith('**') && line.endsWith('**')) {
						return `<p><strong>${line.slice(2, -2)}</strong></p>`;
					} else if (line.trim() === '') {
						return '';
					} else {
						return `<p>${line}</p>`;
					}
				}).join('\n')} />
			</div>
		</div>

		<div class="post-footer">
			<div class="container">
				<a href="/blog" class="back-link">
					<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
						<path d="M19 12H5M12 19l-7-7 7-7"/>
					</svg>
					Back to Blog
				</a>
			</div>
		</div>
	</article>
</Layout>

<style>
	.blog-post {
		background: #0a192f;
		min-height: 100vh;
	}

	.post-header {
		padding: 4rem 0 3rem;
		background: linear-gradient(180deg, #112240 0%, #0a192f 100%);
	}

	.container {
		max-width: 900px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	.post-meta {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		margin-bottom: 1.5rem;
		font-size: 0.9375rem;
		flex-wrap: wrap;
	}

	.category {
		color: #00d4ff;
		font-weight: 600;
	}

	time {
		color: rgba(255, 255, 255, 0.7);
	}

	.read-time {
		color: rgba(255, 255, 255, 0.6);
	}

	.divider {
		color: rgba(255, 255, 255, 0.3);
	}

	h1 {
		font-size: clamp(2.5rem, 5vw, 3.5rem);
		line-height: 1.15;
		margin-bottom: 1.5rem;
		color: #fff;
	}

	.post-excerpt {
		font-size: 1.375rem;
		line-height: 1.6;
		color: rgba(255, 255, 255, 0.85);
		margin-bottom: 1.5rem;
	}

	.author-info {
		color: rgba(255, 255, 255, 0.7);
		font-size: 1rem;
	}

	.featured-image {
		width: 100%;
		max-width: 1200px;
		margin: 0 auto 4rem;
		padding: 0 2rem;
	}

	.featured-image img {
		width: 100%;
		height: auto;
		max-height: 500px;
		object-fit: cover;
		border-radius: 12px;
		box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
	}

	.post-content {
		padding: 0 0 4rem;
	}

	.content-wrapper {
		color: rgba(255, 255, 255, 0.85);
		font-size: 1.125rem;
		line-height: 1.8;
	}

	.content-wrapper :global(h1) {
		font-size: 2.5rem;
		margin: 3rem 0 1.5rem;
		color: #fff;
		line-height: 1.2;
	}

	.content-wrapper :global(h2) {
		font-size: 2rem;
		margin: 2.5rem 0 1.25rem;
		color: #fff;
		line-height: 1.3;
	}

	.content-wrapper :global(h3) {
		font-size: 1.5rem;
		margin: 2rem 0 1rem;
		color: #fff;
		line-height: 1.4;
	}

	.content-wrapper :global(p) {
		margin-bottom: 1.5rem;
	}

	.content-wrapper :global(li) {
		margin-left: 1.5rem;
		margin-bottom: 0.75rem;
		list-style-type: disc;
	}

	.content-wrapper :global(strong) {
		color: #fff;
		font-weight: 700;
	}

	.post-footer {
		padding: 3rem 0;
		border-top: 1px solid rgba(255, 255, 255, 0.1);
	}

	.back-link {
		display: inline-flex;
		align-items: center;
		gap: 0.75rem;
		color: #00d4ff;
		text-decoration: none;
		font-weight: 600;
		font-size: 1.0625rem;
		transition: gap 0.3s ease;
	}

	.back-link:hover {
		gap: 1rem;
	}

	@media (max-width: 768px) {
		.post-header {
			padding: 3rem 0 2rem;
		}

		h1 {
			margin-bottom: 1.25rem;
		}

		.post-excerpt {
			font-size: 1.125rem;
		}

		.featured-image {
			margin-bottom: 3rem;
		}

		.post-content {
			padding: 0 0 3rem;
		}

		.content-wrapper {
			font-size: 1.0625rem;
		}

		.content-wrapper :global(h1) {
			font-size: 2rem;
			margin: 2.5rem 0 1.25rem;
		}

		.content-wrapper :global(h2) {
			font-size: 1.625rem;
			margin: 2rem 0 1rem;
		}

		.content-wrapper :global(h3) {
			font-size: 1.375rem;
			margin: 1.5rem 0 0.875rem;
		}

		.post-footer {
			padding: 2rem 0;
		}
	}
</style>
